#!/bin/sh

export PREFIX=""
if [ -d 'venv' ]; then
    export PREFIX="venv/bin/"
fi

set -ex

if [ -z $GITHUB_ACTIONS ]; then
    scripts/check
fi

if [ -z "$1" ]
  then
    E2E_FLAG="not e2e"
  else
    E2E_FLAG="e2e"
fi

${PREFIX}coverage run --debug config -m pytest -m "$E2E_FLAG"

if [ -z $GITHUB_ACTIONS ]; then
    scripts/coverage
fi
