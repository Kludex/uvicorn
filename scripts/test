#!/bin/sh

export PREFIX=""
if [ -d 'venv' ] ; then
    export PREFIX="venv/bin/"
fi

set -ex

if [ -z $GITHUB_ACTIONS ]; then
    scripts/check
fi

export PYTHONASYNCIODEBUG=1
${PREFIX}coverage run --debug config -m pytest --log-cli-level=debug

if [ -z $GITHUB_ACTIONS ]; then
    scripts/coverage
fi
